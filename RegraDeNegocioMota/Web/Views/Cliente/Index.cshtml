@model IEnumerable<Dominio.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<p>
    @Html.ActionLink("Novo Cadastro", "Cadastrar")
</p>

<p>
    @using (Html.BeginForm("Index", "Cliente", FormMethod.Get))
    {
        <input type="text" name="nome" id="nome" placeholder="Pesquisar por Nome" />
        @*<text>Pesquisar</text>@Html.DropDownList("nome", new SelectList(ViewBag.Nome), string.Empty)*@
        <input type="submit" value="Pesquisar" />
    }
</p>
<table class="table">
    <tr>
        
        @*<th>
            @Html.DisplayNameFor(model => model.IdCliente)
        </th>*@

        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCadastro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.IdCliente)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sobrenome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataCadastro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.IdCliente }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.IdCliente }) |
            @Html.ActionLink("Excluir", "Excluir", new { id=item.IdCliente })
        </td>
    </tr>
}
    
</table>
